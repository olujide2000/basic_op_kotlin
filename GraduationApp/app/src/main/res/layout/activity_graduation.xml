<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GraduationActivity">

    <TextView
        android:id="@+id/txt_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_your_full_name"
        android:textStyle="italic"
        android:hint="@string/student_full_name"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:textColorHint="@color/teal_700"/>
    <TextView
        android:id="@+id/txt_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_your_course_name"
        android:textStyle="italic"
        android:textSize="22sp"
        android:hint="@string/course_title_name"
        android:layout_margin="20dp"
        android:textColorHint="@color/teal_700"/>



</LinearLayout>